# Book Buddy Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# ===================================
# API Keys and Secrets
# ===================================

# OpenAI API Key (Required for AI analysis features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================================
# Development Configuration
# ===================================

# Environment (development, production, github-pages)
NODE_ENV=development

# Debug mode (true/false)
DEBUG=true

# API timeouts and retries
API_TIMEOUT=15000
API_MAX_RETRIES=2

# ===================================
# Feature Flags
# ===================================

# Enable AI analysis features
ENABLE_AI_ANALYSIS=true

# Enable online book search
ENABLE_ONLINE_SEARCH=true

# Enable analytics dashboard
ENABLE_ANALYTICS=true

# Enable development test data
ENABLE_TEST_DATA=true

# ===================================
# AI Configuration
# ===================================

# Default AI model to use
DEFAULT_AI_MODEL=gpt-3.5-turbo

# Maximum cost per AI request (in USD)
MAX_COST_PER_REQUEST=1.00

# Maximum cost per hour (in USD)
MAX_COST_PER_HOUR=10.00

# Maximum cost per day (in USD)
MAX_COST_PER_DAY=50.00

# ===================================
# Google Books API (Optional)
# ===================================

# Google Books API Key (optional, for enhanced search)
# GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# ===================================
# Development Only
# ===================================

# Enable API mocking for testing
ENABLE_API_MOCKING=false

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true